# Protect this directory
Options -Indexes

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Allow direct access to css, js, images, and other static files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ - [L]
</IfModule>

# Force CSS MIME type
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
</IfModule>

# Allow access to static files (Apache 2.4 syntax)
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Require all granted
</FilesMatch>

# Deny access to sensitive files (Apache 2.4 syntax)
<FilesMatch "\.(log|sql|git|env)$">
    Require all denied
</FilesMatch>

# PHP settings
<IfModule mod_php.c>
    php_flag display_errors off
</IfModule>
